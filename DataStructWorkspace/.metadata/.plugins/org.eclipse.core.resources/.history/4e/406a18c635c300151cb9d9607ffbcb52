#include <stdio.h>
#include "vector3.h"

int main(int argc, char* args[]){
	vector3 p = mkVector(-1,3,1);
	vector3 q = mkVector(0,6,3);
	vector3 r = mkVector(3,2,-1);

	vector3 a = diffVector(q, p);
	vector3 b = diffVector(r, p);
	vector3 c = crossP(a,b);
	vector3 d = crossP(b,a);
	printV(c);
	printf("\n");
	printV(d);
	printf("%.3lf", v3Mag(c)/2);
	getchar();
	return 0;
}
