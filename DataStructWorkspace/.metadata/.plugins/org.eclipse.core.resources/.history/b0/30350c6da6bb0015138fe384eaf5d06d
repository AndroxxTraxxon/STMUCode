#include <stdio.h>
#include <stdlib.h>


struct Card {

	char *face;
	char *suit;

};

union number{
	//within a union,
	int x;
	double y;

};

typedef struct Card * cardPtr;

int main(){


	union number value;
	value.x = 100;

	printf("%s: %d\n%s: %lf\n" ,
			"int", value.x,
			"double", value.y);

	value.y = 200.0;

		printf("%s: %d\n%s: %lf\n" ,
				"int", value.x,
				"double", value.y);

	printf("Hello World!");
	getchar();
	return 0;
}


