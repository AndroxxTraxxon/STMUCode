#ifndef VECTOR3_H_
#define VECTOR3_H_

typedef struct {
	double x;
	double y;
	double z;

}vector3;

vector3 i();
vector3 j();
vector3 k();


double v3Mag(vector3 v);
vector3 v3Dir(vector3 v);
double dotP(vector3 v1, vector3 v2);
vector3 XP(vector3 v1, vector3 v2);
vector3 mkVector(int x, int y, int z);
vector3 cpVector(vector3 v);
vector3 sclVector(vector3 v, double scl);


#endif /* VECTOR3_H_ */
