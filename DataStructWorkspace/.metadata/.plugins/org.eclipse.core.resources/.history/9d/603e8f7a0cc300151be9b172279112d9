#include "vector3.h"
#include <math.h>
#include <stdio.h>

double v3Mag(vector3 v){
	return sqrt(pow(v.x, 2) + pow(v.y, 2) + pow(v.z, 2));
}

vector3 cpVector(vector3 v){
	vector3 copy;
	copy.x = v.x;
	copy.y = v.y;
	copy.z = v.z;
	return copy;
}

vector3 normalize(vector3 v){
	vector3 normalized = sclVector(v, 1/v3Mag(v));
	return normalized;
}

vector3 mkVector(int x, int y, int z){
	vector3 v;
	v.x = x;
	v.y = y;
	v.z = z;
	return v;
}

vector3 sclVector(double scl, vector3 v){
	vector3 cp = cpVector(v);
	cp.x *= scl;
	cp.y *= scl;
	cp.z *= scl;
	return cp;
}
vector3 addVector(vector3 v1, vector3 v2){
	vector3 v;
	v.x = v1.x + v2.x;
	v.y = v1.y + v2.y;
	v.z = v1.z + v2.z;
	return v;
}

vector3 i();
vector3 j();
vector3 k();


double dotP(vector3 v1, vector3 v2);
vector3 XP(vector3 v1, vector3 v2);

void printV(vector3 v){

	printf("<%lf, %lf, %lf>", v.x, v.y, v.z);
}
