#ifndef VECTOR3_H_
#define VECTOR3_H_

class Vector3 {
public:
	double x,y,z;
	static Vector3 i, j, k;

	Vector3(double x, double y, double z);
	virtual ~Vector3();
	static Vector3 crossP(Vector3 a, Vector3 b);
	static double dotP(Vector3 a, Vector3 b);

private:
	void initVars(double i, double j, double k);
};

#endif /* VECTOR3_H_ */
